<html>
    <%- include("partials/head") %> 
<body class="bg-gradient-light m-0 p-0">
    
    <%- include("partials/header") %>

    <div class="container d-flex justify-content-center">
        <div class="row">
            <div class="card m-5 p-3">
                <div class="card-body">
                    <h5 class="card-title">Editar Pelicula!</h4>
                        <form action="/peliculas/editar/<%= peliculas.id %> " method="POST">
                            <div class="form-group">
                                <label for="titulo">Titulo</label> </br>
                                <input type="text" name="titulo" value="<%= peliculas.title %>">
                            </div>
                            <div class="form-group">
                                <label for="premios">Premios</label> </br>
                                <input type="text" name="premios" value="<%= peliculas.awards %>">
                            </div>
                            <div class="form-group">
                                <label for="length">Duraci√≥n</label> </br>
                                <input type="titulo" name="length" value="<%= peliculas.length %>">
                            </div>
                            <div class="form-group">
                                <label for="rating">Raiting</label> </br>
                                <input type="titulo" name="rating" value="<%= peliculas.rating %>">
                            </div>
                            <div class="form-group">
                                <label for="release_date">Fecha de estreno</label> </br>
                                <input type="date" name="release_date">
                            </div>
                            <div class="form-group">
                                <label for="genero">Genero</label> </br>
                                <select name="genero">
                                    <% for (let i= 0; i < generos.length; i++) { %> 
                                        <% if (generos[i].id == peliculas.genre_id) { %> 
                                            <option value=" <%= generos[i].id %> selected ">
                                                <%= generos[i].name %> 
                                            </option>
                                        <% } else { %>
                                            <option value=" <%= generos[i].id %> ">
                                                <%= generos[i].name %> 
                                            </option>
                                        <% } %> 
                                        
                                        
                                    <% } %>     
                                </select>
                            </div>

                            <button type="submit" class="btn btn-outline-info">Editar!</button>
                        </form>
                 </div>
            </div>    
        </div>
    </div>
    <%- include("partials/footer") %>
</body>

</html>